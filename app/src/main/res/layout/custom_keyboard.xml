<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#222222"
    android:padding="8dp">

    <!-- Первый ряд: 1, 2, 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">

        <Button android:id="@+id/btn1"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="1" />
        <Button android:id="@+id/btn2"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="2" />
        <Button android:id="@+id/btn3"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="3" />

    </LinearLayout>

    <!-- Второй ряд: 4, 5, 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">

        <Button android:id="@+id/btn4"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="4" />
        <Button android:id="@+id/btn5"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="5" />
        <Button android:id="@+id/btn6"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="6" />

    </LinearLayout>

    <!-- Третий ряд: 7, 8, 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">

        <Button android:id="@+id/btn7"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="7" />
        <Button android:id="@+id/btn8"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="8" />
        <Button android:id="@+id/btn9"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="9" />

    </LinearLayout>

    <!-- Четвертый ряд: :, 0, удалить -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/btnColon"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text=":" />
        <Button android:id="@+id/btn0"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="0" />
        <Button android:id="@+id/btnDelete"
            android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:layout_margin="1dp"
            android:background="#444444" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:text="←" />

    </LinearLayout>

</LinearLayout>